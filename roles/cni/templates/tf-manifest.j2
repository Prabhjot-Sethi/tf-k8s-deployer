      containers:
      - name: contrail-analyticsdb-nodemgr
        image: "{{ _tf_docker_registry }}/contrail-nodemgr:{{ _tf_container_tag }}"
        imagePullPolicy: ""
        securityContext:
          privileged: true
        envFrom:
        - configMapRef:
            name: env
        - configMapRef:
            name: nodemgr-config
        - configMapRef:
            name: contrail-analyticsdb-config
